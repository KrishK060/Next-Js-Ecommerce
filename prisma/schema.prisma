generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  name      String?
  role      Role      @default(USER)
  createdAt DateTime  @default(now())      
  updatedAt DateTime  @updatedAt           
  products  Product[]
  cartItems CartItem[]
}

model Product {
  id          String     @id @default(cuid())
  title       String
  description String
  price       Float
  imageUrl    String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  user        User?      @relation(fields: [userId], references: [id]) // âœ… link back
  userId      String?

  cartItems   CartItem[]
}

model CartItem {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  product   Product  @relation(fields: [productId], references: [id])
  productId String
  quantity  Int      @default(1)
  addedAt   DateTime @default(now())
}

enum Role {
  ADMIN
  USER
}
